# EaglerProxy Configuration
# This file contains environment variables for configuring EaglerProxy
# Copy this file to .env and modify the values as needed

# ===== Adapter Configuration =====
# The name of the proxy
ADAPTER_NAME=EaglerProxy

# The host to bind to (0.0.0.0 means all interfaces)
BIND_HOST=0.0.0.0

# The port to bind to (this is the port clients will connect to)
BIND_PORT=8080

# Maximum number of concurrent clients
MAX_CONCURRENT_CLIENTS=20

# Use native modules (sharp) for better performance (true/false)
# Set to false if you're on a platform without native module support
USE_NATIVES=true

# ===== Target Server Configuration =====
# Default Minecraft server to connect to
SERVER_HOST=127.0.0.1
SERVER_PORT=1111

# ===== EagProxyAAS Plugin Configuration =====
# Internal server port for the EagProxyAAS plugin
EAGPROXYAAS_INTERNAL_PORT=25569
EAGPROXYAAS_INTERNAL_IP=127.0.0.1

# Allow clients to specify custom ports (true/false)
ALLOW_CUSTOM_PORTS=true

# Allow direct connect endpoints (true/false)
ALLOW_DIRECT_CONNECT=true

# Disallow connections to Hypixel (true/false)
DISALLOW_HYPIXEL=false

# Show disclaimers to clients (true/false)
SHOW_DISCLAIMERS=false

# ===== Authentication Configuration =====
# Enable authentication (true/false)
AUTH_ENABLED=false

# Authentication password (only used if AUTH_ENABLED=true)
AUTH_PASSWORD=your_password_here
